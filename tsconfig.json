/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"],
    "paths": {
      "@custom-types/*": ["./src/app/types/*"],
      "@v1/components/*": ["./src/app/visual-editor/components/*"],
      "@v1/models/*": ["./src/app/visual-editor/models/*"],
      "@v1/directives/*": ["./src/app/visual-editor/directives/*"],
      "@v1/pipes/*": ["./src/app/visual-editor/pipes/*"],
      "@v1/services/*": ["./src/app/visual-editor/services/*"],
      "@v2/editor/action-bar/*": ["./src/app/visual-editor-2/editor/action-bar/*"],
      "@v2/editor/canvas/*": ["./src/app/visual-editor-2/editor/canvas/*"],
      "@v2/editor/dynamic-elements/*": ["./src/app/visual-editor-2/editor/dynamic-elements/*"],
      "@v2/editor/elements/*": ["./src/app/visual-editor-2/editor/elements/*"],
      "@v2/editor/panzoom/*": ["./src/app/visual-editor-2/editor/panzoom/*"],
      "@v2/editor/placeholder/*": ["./src/app/visual-editor-2/editor/placeholder/*"],
      "@v2/editor/resize/*": ["./src/app/visual-editor-2/editor/resize/*"],
      "@v2/editor/visor/*": ["./src/app/visual-editor-2/editor/visor/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
